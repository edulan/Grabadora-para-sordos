<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="es.alltogether.c3po" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".Recorder" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".RecordAndPlay" android:label="@string/app_name"></activity>
		<activity android:name=".Subjects" android:label="@string/subjects_name"></activity>
		<activity android:name=".Sessions" android:label="@string/sessions_name"></activity>
		<activity android:name=".SubjectDialog" android:label="@string/subjects_name"></activity>
	</application>
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-feature android:name="android.hardware.microphone"
		android:required="true" />
</manifest>

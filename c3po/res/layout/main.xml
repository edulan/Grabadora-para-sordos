<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="30dip">
	<LinearLayout android:orientation="vertical"
		android:gravity="center" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_gravity="center">
		<TextView android:layout_width="fill_parent" android:id="@+id/title_label"
			android:layout_height="wrap_content" android:text="@string/recordings_title_label"
			android:gravity="center" android:textSize="24.5sp" />
		<TextView android:layout_width="fill_parent" android:id="@+id/description_label"
			android:layout_height="wrap_content" android:text="@string/recordings_description_label"
			android:gravity="center" android:layout_marginBottom="25dip" />
		<Button android:layout_width="fill_parent" android:id="@+id/goRecording"
			android:layout_height="wrap_content" android:text="@string/recordings_label">
		</Button>
	</LinearLayout>
</LinearLayout>
